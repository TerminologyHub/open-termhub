<?xml version="1.0" encoding="UTF-8"?>
<!-- Debugging logging configuration -->
<Configuration status="WARN">
	<Properties>
		<!-- Default to INFO if LOG_LEVEL env var is not set -->
		<Property name="LOG_LEVEL">${env:LOG_LEVEL:-INFO}</Property>
	</Properties>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{yyyy-MM-dd'T'HH:mm:ssXXX} %-5p : %m%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Root level="${LOG_LEVEL}">
			<AppenderRef ref="Console" />
		</Root>
		<Logger name="com.wci.termhub" level="${LOG_LEVEL}" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="org" level="warn" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="org.springframework" level="${LOG_LEVEL}" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
	</Loggers>
</Configuration>